generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Food {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  calories      Float?
  protein       Float?
  fat           Float?
  carbohydrates Float?
  fiber         Float?
  sugar         Float?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Category      Category? @relation(fields: [categoryId], references: [id])
  categoryId    Int?
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  foods     Food[]
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}
